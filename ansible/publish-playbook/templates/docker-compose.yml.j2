services:
  server:
    user: {{ USER_ID }}:{{ USER_GROUP_ID }}
    image: whats-my-weather-web:latest
    restart: unless-stopped
    environment:
      - API_KEY_FILE=/run/secrets/api-key
    ports:
      - {{ APP_PORT }}:8080
    secrets:
      - api-key

secrets:
  api-key:
    file: ./api-key.txt

